{% extends 'base.html.twig' %}

{% block title %}
    {{ parent()}} dans ma liste de recettes
{% endblock %}

 {% block stylesheets %}
     {{ parent() }}
     <style>
         body {
             color: blueviolet;
         }
     </style>

 {% endblock %}


{% block importmap %}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    {{ importmap('recipe') }}
{% endblock %}

{% block body %}
    <i data-feather="circle"></i>

    {{ dump(recipeList) }}

<h1>Liste des {{ kind }}s</h1>

    <p>Nous sommes en {{ currentYear }}</p>

    <img src="{{ asset('images/tajine.webp') }}">

<ul>
    {% for recipe in recipeList %}
        <li>
            <a href="{{ path('recipe_details', {'id': recipe.id}) }}">
                {{ recipe.title }}
            </a>
            (
                <a href="{{ path('recipe_by_kind', {'kind': recipe.kind}) }}">
                    {{ recipe.kind }}
                </a>
            )
            - {{ recipe.ingredients | length }} ingr√©dients
        </li>
    {% endfor %}
</ul>

{% endblock %}
